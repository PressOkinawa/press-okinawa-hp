  <style>
    :root{
      --page-w: 940px;             /* 全体の最大幅（少し小さめ） */
      --pad: 16px;
      --brand-blue:#0077ff;
      --brand-cyan:#00d4ff;
      --ink:#222;
      --wall:#f6f4ef;
      --gap: 14px;
      --tile-min: 180px;           /* ★ タイル最小幅（小さく見せる） */
    }
    *,*::before,*::after{ box-sizing:border-box; }
    html,body{ margin:0; }
    img{ max-width:100%; height:auto; vertical-align:middle; }

    .copy-wrap{ max-width:var(--page-w); margin:18px auto 10px; padding:0 var(--pad); }
    .copy-card{ background:#fff; border-radius:16px; padding:16px 14px; border-left:6px solid var(--brand-blue); box-shadow:0 8px 22px rgba(0,0,0,.06); }
    .copy-title{ color:var(--brand-blue); margin:0 0 .35rem; font-size:clamp(1.2rem,1.8vw,1.45rem); }
    .copy-lead{ color:#555; margin:0 0 .25rem; }
    .copy-tag{ color:var(--ink); font-weight:600; margin:0; }

    /* ===== ギャラリー（Grid＋おしゃれ比率） ===== */
    .gallery-wrap{ max-width:var(--page-w); margin:16px auto; padding:0 var(--pad); }
    .gallery-head h2{ margin:0 0 6px; color:var(--brand-blue); font-size:1.05rem; letter-spacing:.02em; }

    .gallery-grid{
      display:grid;
      grid-template-columns: repeat(auto-fill, minmax(var(--tile-min), 1fr));
      gap: var(--gap);
      background:var(--wall);
      padding: 12px;
      border-radius: 16px;
      box-shadow: inset 0 6px 16px rgba(0,0,0,.06), 0 6px 18px rgba(0,0,0,.06);
    }
    .tile{ text-decoration:none; color:inherit; }
    .card{
      position:relative;
      overflow:hidden;
      border-radius:14px;
      background:#fff;
      box-shadow: 0 6px 18px rgba(0,0,0,.08);
      border:1px solid #eee;
    }
    .card img{
      width:100%;
      height:100%;
      aspect-ratio: 4 / 3;           /* 基本比率 */
      object-fit: cover;
      transition: transform .25s ease, filter .25s ease;
    }
    /* ランダム風リズム（ワイド・縦長・正方形を混ぜる） */
    .gallery-grid .tile:nth-child(10n+1) .card img{ aspect-ratio: 16 / 9; } /* ワイド */
    .gallery-grid .tile:nth-child(10n+3) .card img{ aspect-ratio: 1 / 1; }  /* 正方形 */
    .gallery-grid .tile:nth-child(10n+6) .card img{ aspect-ratio: 3 / 4; }  /* 縦長 */
    .gallery-grid .tile:nth-child(10n+8) .card img{ aspect-ratio: 2 / 3; }  /* さらに縦長 */

    .card figcaption{
      position:absolute; left:0; right:0; bottom:0;
      padding:.35rem .55rem;
      color:#fff; font-weight:600; font-size:.9rem; text-align:center;
      backdrop-filter: blur(4px);
      background: linear-gradient(180deg, rgba(0,0,0,.0), rgba(0,0,0,.45));
      text-decoration:none;
    }
    .card:hover img{ transform: scale(1.03); filter: saturate(1.05); }

    /* ===== スライド（CSSのみ／小さめ） ===== */
    .slides{ max-width:var(--page-w); margin:16px auto 28px; padding:0 var(--pad); }
    .slides h2{ margin:0 0 6px; color:var(--brand-blue); font-size:1.05rem; }
    .slide-frame{ margin:0; background:#fff; border-radius:14px; padding:10px; box-shadow:0 8px 22px rgba(0,0,0,.06); }
    .slide-media{
      position:relative;
      height: clamp(180px, 32vh, 360px);  /* ★ さらに小さめ */
      display:flex; justify-content:center; align-items:center;
      border-radius:10px; overflow:hidden;
      background:linear-gradient(180deg,#fafafa,#f3f6fb);
    }
    .slideshow{ --count:7; --interval:6s; --dur: calc(var(--count) * var(--interval)); }
    .slideshow img{
      position:absolute; inset:0; margin:auto;
      width:auto; height:100%; max-width:100%;
      object-fit: contain; border-radius:8px;
      opacity:0; animation: slideShow var(--dur) linear infinite;
    }
    .slideshow img:nth-child(1){ animation-delay: calc(var(--interval) * 0); }
    .slideshow img:nth-child(2){ animation-delay: calc(var(--interval) * 1); }
    .slideshow img:nth-child(3){ animation-delay: calc(var(--interval) * 2); }
    .slideshow img:nth-child(4){ animation-delay: calc(var(--interval) * 3); }
    .slideshow img:nth-child(5){ animation-delay: calc(var(--interval) * 4); }
    .slideshow img:nth-child(6){ animation-delay: calc(var(--interval) * 5); }
    .slideshow img:nth-child(7){ animation-delay: calc(var(--interval) * 6); }
    @keyframes slideShow{
      0%{ opacity:0 }
      8%{ opacity:1 }
      84%{ opacity:1 }
      100%{ opacity:0 }
    }

    /* CSSライトボックス */
    .lb{ position:fixed; inset:0; display:none; align-items:center; justify-content:center; background:rgba(0,0,0,.85); padding:22px; z-index:90; }
    .lb img{ max-width:92vw; max-height:86vh; object-fit:contain; border-radius:8px; box-shadow:0 12px 40px rgba(0,0,0,.4); }
    .lb figcaption{ position:absolute; bottom:12px; left:50%; transform:translateX(-50%); color:#fff; background:rgba(0,0,0,.35); padding:.3rem .55rem; border-radius:6px; font-weight:600; }
    .lb__close{ position:absolute; top:12px; right:12px; width:40px; height:40px; display:grid; place-items:center; border-radius:999px; background:rgba(255,255,255,.1); color:#fff; text-decoration:none; font-size:20px; }
    .lb__nav{ position:absolute; top:50%; transform:translateY(-50%); width:44px; height:44px; display:grid; place-items:center; border-radius:999px; background:rgba(255,255,255,.1); color:#fff; text-decoration:none; font-size:22px; }
    .lb__prev{ left:14px; } .lb__next{ right:14px; }
    .lb:target{ display:flex; }

    /* 固定ボタン */
    .fixed-button{ position:fixed; right:1rem; bottom:1rem; background:linear-gradient(90deg,var(--brand-blue),var(--brand-cyan)); color:#fff; text-decoration:none; padding:.85rem 1.1rem; border-radius:999px; box-shadow:0 8px 24px rgba(0,0,0,.18); font-weight:700; }

    @media (max-width: 900px){
      :root{ --tile-min: 160px; }
    }
    @media (max-width: 600px){
      :root{ --tile-min: 150px; }
      .slide-media{ height: clamp(170px, 30vh, 320px); }
    }
    @media (prefers-reduced-motion: reduce){
      .slideshow img{ animation: none; opacity: 1; }
    }
