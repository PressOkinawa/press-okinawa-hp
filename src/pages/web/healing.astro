---
import Header from "../../components/header.astro";
import Footer from "../../components/footer.astro";
import "../../styles/style.css";
---

<!doctype html>
<html lang="ja">
	<head>
		<meta charset="UTF-8" />
		<title>ヒーリング素材ギャラリー</title>
		<meta name="viewport" content="width=device-width, initial-scale=1" />
		<style>
			.healing-grid {
				display: grid;
				grid-template-columns: repeat(auto-fit, minmax(260px, 1fr));
				gap: 1.5rem;
				max-width: 1100px;
				margin: 2rem auto;
				padding: 0 1rem;
			}
			.healing-item {
				background: #fff;
				border-radius: 12px;
				box-shadow: 0 4px 16px rgba(0,0,0,.08);
				overflow: hidden;
				text-align: center;
				transition: box-shadow .2s;
			}
			.healing-item:hover {
				box-shadow: 0 8px 32px rgba(0,0,0,.16);
			}
			.healing-img {
				width: 100%;
				max-width: 1000px;
				height: 200px;
				object-fit: cover;
				background: #eee;
				cursor: pointer;
				display: block;
			}
			.healing-label {
				padding: .7rem 0 .9rem;
				font-size: 1.05rem;
				color: #444;
			}
		</style>
	</head>
	<body>
		<Header />
		<main>
			<h1 style="text-align:center;margin-top:2rem;">ヒーリング素材ギャラリー</h1>
			<div class="healing-grid">
				{Array.from({length: 40}).map((_, i) => (
					<a href="/images/healing/midoria.mp3" class="healing-item" target="_blank" rel="noopener">
						<img src="/images/healing/midorityank.jpg" alt={`ヒーリング画像${i+1}`} class="healing-img" width="1000" height="500" loading="lazy" />
						<div class="healing-label">ヒーリング画像{i+1}</div>
					</a>
				))}
			</div>
		</main>
		<Footer />
	</body>
</html>
