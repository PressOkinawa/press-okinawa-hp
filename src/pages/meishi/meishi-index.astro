            ];

            const schedule2 = [
                { startHour: 0, image: "/images/kami1.gif" },
                { startHour: 1, image: "/images/kami1.gif" },
                { startHour: 2, image: "/images/kami1.gif" },
                { startHour: 3, image: "/images/kami1.gif" },
                { startHour: 4, image: "/images/kami1.gif" },
                { startHour: 5, image: "/images/kami1.gif" },
                { startHour: 6, image: "/images/kami1.gif" },
                { startHour: 7, image: "/images/kami1.gif" },
            ];

            const schedule3 = [{ startHour: 0, image: "/images/kuu1.jpg" }];

            const schedule4 = [
                { startHour: 0, image: "/images/pos1.jpg" },
                { startHour: 1, image: "/images/pos2.jpg" },
                { startHour: 2, image: "/images/pos3.jpg" },
                { startHour: 3, image: "/images/pos4.jpg" },
                { startHour: 4, image: "/images/pos5.jpg" },
                { startHour: 5, image: "/images/pos6.jpg" },
                { startHour: 6, image: "/images/pos7.jpg" },
            ];

            const schedule5 = [{ startHour: 0, image: "/images/fuu1.jpg" }];

            const schedule6 = [
                { startHour: 0, image: "/images/menu1.jpg" },
                { startHour: 1, image: "/images/menu2.jpg" },
                { startHour: 2, image: "/images/menu3.jpg" },
            ];

            /**
             * 指定したスケジュールから現在時刻に合う画像を返す
             * @param {{startHour:number,image:string}[]} schedule
             * @returns {string}
             */
            function getImageForSchedule(schedule) {
                const hour = new Date().getHours();
                return schedule[hour % schedule.length].image;
            }

            // ID と schedule の紐付け
            const slideshowIds = [
                ["slideshow-1", schedule1],
                ["slideshow-2", schedule2],
                ["slideshow-3", schedule3],
                ["slideshow-4", schedule4],
                ["slideshow-5", schedule5],
                ["slideshow-6", schedule6],
            ];

            function updateAllSlideshows() {
                slideshowIds.forEach(([id, schedule]) => {
                    const el = document.getElementById(id);
                    if (el) el.src = getImageForSchedule(schedule);
                });
            }

            // 初期表示 & 10分ごとに更新
            updateAllSlideshows();
            setInterval(updateAllSlideshows, 10 * 60 * 1000);
        </script>

        <!-- フェードアニメーション -->
        <script>
            document.addEventListener("DOMContentLoaded", () => {
                const observer = new IntersectionObserver((entries) => {
                    entries.forEach((entry) => {
                        if (entry.isIntersecting) {
                            entry.target.classList.add("show");
                        }
                    });
                });
                document
                    .querySelectorAll(".fade-up")
                    .forEach((el) => observer.observe(el));
            });
        </script>
